<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part xmlns="urn:enonic:xp:model:1.0">
  <display-name>FAQ</display-name>
  <description>Display questions and answers</description>
  <form>
    <input name="faqHeading" type="TextLine">
      <label>Override heading</label>
    </input>
    <item-set name="faqs">
      <label>FAQ-sets</label>
      <occurrences minimum="0" maximum="0"/>
      <items>
        <input name="question" type="TextLine">
          <label>Question</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input name="answer" type="TextArea">
          <label>Answer</label>
          <occurrences minimum="1" maximum="1"/>
        </input>
      </items>
    </item-set>
  </form>
</part>