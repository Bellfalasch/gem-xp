<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part xmlns="urn:enonic:xp:model:1.0">
  <display-name>Image</display-name>
  <description>Insert image</description>
  <form>
    <input type="ImageSelector" name="image">
      <label>Image</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="captionText" type="TextLine">
      <label>Caption-text</label>
      <help-text>Add caption here</help-text>
      <occurrences minimum="0" maximum="1"/>
    </input>
    <input name="altText" type="TextLine">
      <label>Alternativ-text</label>
      <help-text>Add alternativ text here</help-text>
      <occurrences minimum="1" maximum="1"/>
    </input>
  </form>
</part>
